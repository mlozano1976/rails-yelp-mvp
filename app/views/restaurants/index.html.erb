<h1>My list of restaurants</h1>

<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-danger"-%>
<% @restaurants.each do |restaurant| %>
  <h2><%= restaurant.name %></h2>
  <p><%= restaurant.address %></p>
  <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
  <%= link_to "Add review", new_restaurant_review_path(restaurant), class: "btn btn-danger"%>
<% end %>
